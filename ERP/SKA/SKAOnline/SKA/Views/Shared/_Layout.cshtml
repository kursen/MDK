@using Telerik.Web.Mvc.UI;
@{
    string userBranchCode = string.Empty;

    if (Session["UserBranchCode"] != null)
    {
        userBranchCode = Session["UserBranchCode"].ToString();
    }
}
<!DOCTYPE html>
<html>
<head>
    <title>Sistem Komputer Akuntansi - Dashboard</title>
    
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    @*<link href="@Url.Content("~/Content/themes/base/jquery.ui.datepicker.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />*@
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    @(Html.Telerik().StyleSheetRegistrar()
                    .DefaultGroup(group => group.Add("telerik.common.css")
                                                .Add("telerik.vista.css")
                                                .Combined(true)
                                                .Compress(true))
    )
    @RenderSection("HeadContent", false)
</head>

<body>
    <div id="wrapper">
        <!-- Header -->
        <div id="header">
	        <div class="shell">
		        <!-- Logo + Top Nav -->
		        <div id="top">
			        <h1 class="logo"><img src="Content/images/logo.png"></img></h1>
			        <div id="top-navigation">
				        @Html.Partial("_LogOnPartial")
			        </div>
		        </div>
		        <!-- End Logo + Top Nav -->
		
		        <!-- Main Nav 
		        <div id="navigation">
			        <ul>
                        <li><a href="@Url.Action("Index", "Home", null)"><span>Home</span></a></li>
                        <li><a href="@Url.Action("Index", "SKA/AnotherList", null)"><span>SKA</span></a></li>
                        <li><a href="@Url.Action("Index", "VoucherKas/VoucherKas", null)"><span>Voucher</span></a></li>
                        <li><a href="@Url.Action("Index", "PettyCashes/PettyCashes", null)"><span>Voucher Kas Kecil</span></a></li>
                        <li><a href="@Url.Action("Index", "Setting/ChartofAccount", null)"><span>Setting</span></a></li>
                    </ul>
		        </div>
		         End Main Nav -->
	        </div>
        </div>
        <!-- End Header -->

        <!-- Container -->
        <div id="container">
	        <div class="shell">
		
		        <br />
		        <!-- Main -->
		        <div id="main">
			        <div class="clearBoth">&nbsp;</div>
			
			        <!-- Content -->
			        <div id="content">
				
				        <!-- Box 
				        <div class="box">
                            @if (ViewData["ErrorMessage"] != null)
                            {
                            <div id="MessageDialog">@Html.Raw(ViewData["ErrorMessage"].ToString())</div>
                            }
					        @RenderBody()
				        </div>
				        End Box -->

                        <!-- Box -->
				        <div class="box">
					        <!-- Box Head -->
					        <div class="box-head">
						        <h2>Dashboard</h2>
					        </div>

                            <div class="dashboardFrame">
								<div class="menuWrapper">
                                    @if (userBranchCode == "00")
                                    { 
                                        <div class="boxMenu">
										    <div class="menuDashboard">
                                                <a href="@Url.Action("Index", "SKA/Journal", null)"><h1>SKA</h1></a>
										    </div>
									    </div>
                                    }
                                    else { 
                                        <div class="boxMenu">
										    <div class="menuDashboard">
                                                <a href="@Url.Action("Index", "SKA/GeneralLedger", null)"><h1>SKA</h1></a>
										    </div>
									    </div>
                                    }
								    <div class="boxMenu">
										<div class="menuDashboard">
                                            <a href="@Url.Action("Index", "VoucherKas/VoucherKas", null)"><h1>Voucher</h1></a>
										</div>
									</div>
									<div class="boxMenu">
										<div class="menuDashboard">
                                            <a href="@Url.Action("Index", "PettyCashes/PettyCashes", null)"><h1>Voucher Kas Kecil</h1></a>
										</div>
									</div>
                                    @*@if (User.IsInRole("User") == false && userBranchCode == "00")
                                    { 
                                        <div class="boxMenu">
										    <div class="menuDashboard">
											    <a href="@Url.Action("Index", "Setting/ChartofAccount", null)"><h1>Setting</h1></a>
										    </div>
									    </div>
                                    }*@
                                    <div class="boxMenu">
										<div class="menuDashboard">
											<a href="@Url.Action("Index", "Setting/ChartofAccount", null)"><h1>Setting</h1></a>
										</div>
									</div>
                                </div>
                            </div>
					        <!-- End Box Head -->
					        &nbsp;
				        </div>
				        <!-- End Box -->
			        </div>
			        <!-- End Content -->
			
			        <div class="clearBoth">&nbsp;</div>			
		        </div>
		        <!-- Main -->
	        </div>
        </div>
        <!-- End Container -->
    </div>

    <!-- Footer -->
    <div id="footer">
	    <div class="shell">
		    <div class="right">
			    &copy; PDAM Tirtanadi Medan @DateTime.Now.Year All RIghts Reserved
		     </span>
	    </div>
    </div>
    <!-- End Footer -->

    @Html.Telerik().ScriptRegistrar()
    <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>
    @if (ViewData["Message"] != null)
    {        
        <script type="text/javascript">
            $(function () {
                $("#MessageDialog").dialog({
                    buttons: {
                        "Ok": function () { $(this).dialog("close"); }
                    },
                    modal: true
                });
            });
        </script>
    }
</body>
</html>
