@model SKA.Models.RegisterModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Areas/Setting/Views/Shared/_SettingLayout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="box-head">
	<h2>Tambah Data User Baru</h2>
</div>
<div class="box-content">
<p>
    Panjang Password minimum adalah @ViewBag.PasswordLength karakter
</p>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
    <table>
        <tr>
            <td>
                Username
            </td>
            <td>
                :
            </td>
            <td>
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </td>
        </tr>
        <tr>
            <td>
                Email
            </td>
            <td>
                :
            </td>
            <td>
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </td>
        </tr>
        <tr>
            <td>
                Cabang
            </td>
            <td>
                :
            </td>
            <td>
                @Html.DropDownListFor(m => m.BranchId, (SelectList)ViewBag.Branch)
                @Html.ValidationMessageFor(m => m.BranchId)
            </td>
        </tr>
        <tr>
            <td>
                Hak Akses
            </td>
            <td>
                :
            </td>
            <td>
               <select id="role" name="role">
                       <option value="">Pilih Hak Akses</option>
                        @foreach (var item in Roles.GetAllRoles().ToList())
                        {	
                             <option value="@item.ToString()"> @item.ToString()</option>
                        }
                      </select> 
            </td>
        </tr>
        <tr>
            <td>
                Password
            </td>
            <td>
                :
            </td>
            <td>
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </td>
        </tr>
        <tr>
            <td>
                Konfirmasi Password
            </td>
            <td>
                :
            </td>
            <td>
                @Html.PasswordFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </td>
        </tr>
    </table>
    <p>
        <input type="submit" value="Daftar" class="t-button" style ="width:60px" />
        &nbsp;
        <input type="reset" value="Reset" class="t-button" style ="width:60px" />
        &nbsp;
        <a class ="t-button" style ="width:60px" href="@Url.Action("Index", "Account", new { Area = "" })">Kembali</a>
    </p>
}
</div>
