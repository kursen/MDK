@model SKA.Areas.Setting.Models.ViewModels.BranchViewModel

<script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <table>
        <tr>
            <td>Kode Cabang</td>
            <td>:</td>
            <td>
                @Html.TextBoxFor(model => model.Code, new { maxlength = "2"})
                @Html.ValidationMessageFor(model => model.Code)
            </td>
        </tr>
        <tr>
            <td>Insial Cabang</td>
            <td>:</td>
            <td>
                @Html.EditorFor(model => model.ShortName)
                @Html.ValidationMessageFor(model => model.ShortName)
            </td>
        </tr>
        <tr>
            <td>Nama Cabang</td>
            <td>:</td>
            <td>
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </td>
        </tr>
        <tr>
            <td>Alamat</td>
            <td>:</td>
            <td>
                @Html.EditorFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address)
            </td>
        </tr>
        <tr>
            <td>Disetujui Oleh</td>
            <td>:</td>
            <td>
                @Html.EditorFor(model => model.ApproverName)
                @Html.ValidationMessageFor(model => model.ApproverName)
            </td>
        </tr>
        <tr>
            <td>Jabatan</td>
            <td>:</td>
            <td>
                @Html.EditorFor(model => model.ApproverPosition)
                @Html.ValidationMessageFor(model => model.ApproverPosition)
            </td>
        </tr>
        <tr>
            <td>Dibuat Oleh</td>
            <td>:</td>
            <td>
                @Html.EditorFor(model => model.MakerName)
                @Html.ValidationMessageFor(model => model.MakerName)
            </td>
        </tr>
        <tr>
            <td>Jabatan</td>
            <td>:</td>
            <td>
                @Html.EditorFor(model => model.MakerPosition)
                @Html.ValidationMessageFor(model => model.MakerPosition)
            </td>
        </tr>
        <tr>
            <td>Diperiksa I Oleh</td>
            <td>:</td>
            <td>
                @Html.EditorFor(model => model.FirstExaminerName)
                @Html.ValidationMessageFor(model => model.FirstExaminerPosition)
            </td>
        </tr>
        <tr>
            <td>Jabatan</td>
            <td>:</td>
            <td>
                @Html.EditorFor(model => model.FirstExaminerPosition)
                @Html.ValidationMessageFor(model => model.FirstExaminerPosition)
            </td>
        </tr>
        <tr>
            <td>Diperiksa II Oleh</td>
            <td>:</td>
            <td>
                @Html.EditorFor(model => model.SecondExaminerName)
                @Html.ValidationMessageFor(model => model.SecondExaminerName)
            </td>
        </tr>
        <tr>
            <td>Jabatan</td>
            <td>:</td>
            <td>
                @Html.EditorFor(model => model.SecondExaminerPosition)
                @Html.ValidationMessageFor(model => model.SecondExaminerPosition)
            </td>
        </tr>
    </table>
    <p>
        <input type="submit" value="Simpan" class="t-button" style ="width:60px" />
        &nbsp;
        <input type="reset" value="Reset" class="t-button" style ="width:60px" />
        &nbsp;
        <a class ="t-button" style ="width:60px" href="@Url.Action("Index", "Branch", null)">Kembali</a>
     </p>
}


