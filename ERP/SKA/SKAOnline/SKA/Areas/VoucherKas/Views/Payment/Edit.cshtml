            </tr>

            <tr>
                <td>No. Kas/Bank</td>
                <td>:</td>
                <td>
                @Html.HiddenFor(model => model.AccountId)
                @Html.TextBoxFor(model => model.AccountCode, new { readOnly = "readonly", style = "width: 100px" })
                @Html.ValidationMessageFor(model => model.AccountId)
