@model SKA.Areas.VoucherKas.Models.ViewModel.VoucherViewModel
@using Telerik.Web.Mvc.UI 
@{
    ViewBag.Title = "Voucher Kas - Hapus";
    Layout = "~/Areas/VoucherKas/Views/Shared/_VoucherLayout.cshtml";
}

<div class="box-head">
	<h2>Hapus Voucher</h2>
</div>
<div class="box-content">
    <h3>Apakah anda yakin untuk menghapus Voucher?</h3>

    <table>
        <tr>
            <td>Nomor Voucher</td>
            <td>:</td>
            <td>
            @Html.DisplayFor(model=>model.Number)
            </td>
        </tr>

        <tr>
            <td>Tanggal Transaksi</td>
            <td>:</td>
            <td>
            @Html.DisplayFor(model=>model.TransactionDate)
            </td>
        </tr>

        <tr>
            <td>Rekanan</td>
            <td>:</td>
            <td>
            @Html.DisplayFor(model => model.PartnerName)
            </td>
        </tr>

        <tr>
            <td>Keterangan</td>
            <td>:</td>
            <td>
            @Html.DisplayFor(model => model.Description)
          
            </td>
        </tr>

        <tr>
            <td>Lampiran</td>
            <td>:</td>
            <td>
            @Html.DisplayFor(model => model.Attachment )
            </td>
        </tr>

        <tr>
            <td>Tanggal Periksa</td>
            <td>:</td>
            <td>
            @Html.DisplayFor(model => model.ApproveDate)
            </td>
        </tr>

        <tr>
            <td>Status Voucher</td>
            <td>:</td>
            <td>
            @Html.DisplayFor(model => model.VoucherStatusName)
            </td>
        </tr>

        
    </table>

    <p></p>
    
     @(Html.Telerik().Grid<SKA.Areas.VoucherKas.Models.ViewModel.VoucherDetailViewModel>()
            .Name("Grid")

            .DataKeys(keys =>
            {
                keys.Add(p => p.Id);
            })
            .DataBinding(dataBinding =>
            {
                dataBinding.Ajax()
                    .Select("_SelectDetail", "VoucherKas");
            })

            .Columns(columns =>
            {
                columns.Bound(p => p.AccountCode).Title("Perkiraan").Width(300);
                columns.Bound(p => p.Debet).Format("{0:N}").Width(120);
                columns.Bound(p => p.Kredit).Format("{0:N}").Width(120); 
            })
            .Pageable()
            .Sortable()
          )
    @using (Html.BeginForm()) {
        <br />
            <input class ="t-button" style ="width:60px" type="submit" value="Hapus" /> 
            <a class ="t-button" style ="width:60px" href="@Url.Action("Index", "VoucherKas", null)">Batal</a>
    }
    
    </div>


