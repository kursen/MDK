@using Telerik.Web.Mvc.UI
@model SKA.Areas.SKA.Models.ViewModels.NetIncomesViewModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <table>
        <tr>
            <td>
                Jumlah
            </td>
            <td>
                :
            </td>
            <td>
                @Html.Telerik().CurrencyTextBoxFor(model => model.Amount).CurrencySymbol("Rp. ")
                @Html.ValidationMessageFor(model => model.Amount)
            </td>
        </tr>
        <tr>
            <td>
                Tahun
            </td>
            <td>
                :
            </td>
            <td>
                @Html.TextBoxFor(model => model.Year, new { @readonly = "readonly"})
            </td>
        </tr>
        <tr>
            <td></td>
            <td></td>
            <td><input type="submit" value="Simpan" class="t-button" style ="width:60px" />
                &nbsp;
                <input type="reset" value="Reset" class="t-button" style ="width:60px" />
                &nbsp;
                <a class ="t-button" style ="width:60px" href="@Url.Action("Index","NetIncomes",null )">Kembali</a></td>
        </tr>
    </table>
}
